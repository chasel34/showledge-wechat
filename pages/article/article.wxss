page{
  height: 100%;
}


/* 文章 */
.article-container{
  margin-left: 20px;
  margin-right: 20px;
  padding-bottom: 15%; 
}

.title{
  display: block;
  margin: 10px 0;
  font-size: 16pt;
  font-weight: bold;
}

.detail{
  display: flex;
}

.avatar{
  margin-left: -6px;
  height: 100rpx;
  width: 100rpx;
  border: 1px solid white;
  border-radius: 100px;
}

.author > text{
  margin-left: 5px;
}

.follow-button{
  display: inline-block;
  margin-left: 5px;
  padding: 1px 10px;
  height: 17pt;
  font-size: 11pt;
  text-align: center;
  background-color: #00cc66;
  border: 1px solid #00cc66;
  border-radius: 20px;
  color: white;
}

.time{
  margin-left: 5px;
  font-size: 11pt;
  color: #969696;
}

.sort > image{
  margin-top: 10px;
  width: 11pt;
  height: 11pt;
}

.sort-item{
  display: inline-block;
  margin-left: 8px;
  padding: 0 3px;
  height: 17pt;
  font-size: 11pt;
  text-align: center;
  border: 1px solid #969696;
  border-radius: 4px;
}

.article-content{
  margin-top: 10px;
  font-size: 13pt;
}


/* 评论列表 */
.comment-list{
  margin-top: 10px;
}

.comment-header{
  padding: 10px 0;
}

.comment-container{ 
  display: flex;
  padding: 10px 0;
  border-top: 1px solid #e6ecf0;
}

.comment-container > image{
  flex-shrink: 0;
}

.comment{
  width: 100%;
  margin-left: 8px;
}

.comment-author{
  font-weight: bold;
}

.comment-detail{
  position: relative;
  width: 100%;
  margin-left: -5px;
  font-size: 10pt;
}

.comment-detail > image{
  width: 14px;
  height: 14px;
  margin: 0 5px;
}


.comment-detail > text{
  position: absolute;
  right: -5px;
  color: #969696;
}


/* 底部菜单 */
.footer{
  display: flex;
  position: fixed;
  align-items: center;
  width: 100%;
  height: 8%;
  border-top: 1px solid #e6ecf0;
  bottom: 0;
  background-color: white;
}

.footer > view{
  display: flex;
  align-items: center;
  margin-left: 15px;
  font-size: 10pt;
  color: #969696;
}

.footer text{
  text-align: center;
}

.footer  image{
  margin-right: 4px;
  width: 15pt;
  height: 15pt;
}

.comment-count{
  position: absolute;
  right: 20px;
}



/* 评论输入框 */

/* 键盘弹起时会覆盖部分输入框跟按钮  待解决 */
.comment-input{
  position: fixed;
  bottom: 0;
  height: 8%;
  width: 100%;
  background-color: white;
  z-index: 100;
}


