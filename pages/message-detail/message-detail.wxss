page{
  height: 100%;
}

.container{
  box-sizing: border-box;
  border-top: 1px solid #e6ecf0;
  padding: 0 9pt 10% 9pt;
}

.time{
  margin: 8px 0;
  text-align: center;
  font-size: 10pt;
  color: #969696;
}

.letter{
  display: flex;
  margin-bottom: 30rpx;
}

.answer{
  flex-direction: row-reverse;
}

.letter > image{
  margin: 0 5px;
  width: 30pt;
  height: 30pt;
  border: 1px solid #ddd;
  border-radius: 50%;
}

.letter > view{
  box-sizing: border-box;
  max-width: 75%;
  padding: 30rpx 30rpx;
  border-radius: 10px;
  background-color: #e6ecf0; 
}


/* 回复输入框  */

.answer-input{
  position: fixed;
  bottom: 0;
  height: 8%;
  width: 100%;
  border-top: 1px solid #e6ecf0;
  background-color: white;
  z-index: 100;
}


