/* 顶部标签 */
.top-tabs{
  display: flex;
  box-sizing: border-box;
  justify-content: space-between;
  width: 100%;
  height: 78px;
  padding: 8px 9pt;
  border-top: 1px solid #e6ecf0;
  border-bottom: 8px solid #e6ecf0;
}

.tab{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tab > image{
  width: 25px;
  height: 25px;
  margin-bottom: 4px;
}

.tab > text{
  font-size: 11pt;
}

/* 沸点 */
.title-bar{
  display: flex;
  position: relative;
  align-items: center;
  padding: 6pt 9pt;
  border-bottom: 1px solid #e6ecf0;
}

/* .tilte > image{
  margin-left: 9pt;
} */

.title-bar > text{
  margin-left: 4px;
  font-size: 11pt;
}

.title-bar > .right{
  position: absolute;
  right: 0;
}

scroll-view{
  border-bottom: 8px solid #e6ecf0;
}

.scroll-view{ 
  display: flex; 
  width: 100%; 
  height: 120px;  
}   

.scroll-view > image{
  box-sizing: border-box; 
  flex-shrink: 0;
  height: 100%; 
  width: 60%; 
  padding: 10px 0;
  margin-left: 8px;
  border: 1px solid white;
  border-radius: 13%;
}


.scroll-view-icon{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
  margin: 10px 8px 10px 8px; 
  width: 35%; 
  border: 1px solid #e6ecf0;
  border-radius: 4px;
}

.scroll-view-icon > image{
  width: 20pt;
  height: 20pt;
}

.scroll-view-icon > text{
  margin-top: 4px;
  font-weight: bold;
  color: #00cc66;
}



/* 笔记 */
.note-list .content{
  border-bottom: 1px solid #e6ecf0;
}

.title{
  margin-left: 33pt; 
  font-size: 15pt;
  font-weight: bold;
  color: #00cc66;
}

.note-list .user-act{
  margin-top: 5px;
}

/* 设置多行省略  */
.note-list .user-act{
    display: -webkit-box;
    line-height: 40rpx;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 5;
    overflow: hidden;
    text-overflow: ellipsis
}

.content{
  padding: 0 9pt;
  border-bottom: 8px solid #e6ecf0;
}

/* .content:first-child{
  border-top: 1px solid #e6ecf0;
} */

.content:last-child{
  border: none;
}

.header{
  display: flex;
  margin-top: 6px;
  height: 25pt;
}

.avatar{
  height: 100%;
  width: 25pt;
}

.avatar > image{
  border: 1px solid #ddd;
  border-radius: 100px;
}

.header > text{
  display: flex;
  align-items: center;
  margin-left: 8pt;
}

.author{
  font-size: 13pt;
  font-weight: bold;
  color: #969696;
}

.date{
  font-size: 11pt;
}

.mode-content{
  margin: 5px 0 0 33pt;
  font-size: 11pt;
}

.mode{
  margin-right: 5pt;
  padding:2pt;
  border: 1px solid #00cc66;
  border-radius: 3px;
  color: #00cc66;
}

.user-act{
  display: inline-block;
  margin: 10px 0 0 33pt;
  font-size: 11pt;
}

.user-library{
  margin: 10px 0 0 33pt;
  padding: 3px;
  border: 1px solid #00cc66;
  font-size: 11pt;
}

.user-library-content{
  display: flex;
  margin-bottom: 5px;
}

.user-library-content > text{
  flex-basis: 62pt;
}

.user-library-content > view{
  color: #00cc66;
}

.act-info{
  display: flex;
  margin: 10px 0 10px 33pt;
  font-size: 11pt;
}

.icon{
  margin: 0 4px 0 8px;
  width: 15pt;
  height: 15pt;
}

.icon:first-child{
  margin-left: 0;
}

